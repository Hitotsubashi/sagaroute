{
  "name": "@sagaroute/vscode-extension",
  "displayName": "Sagaroute",
  "private": true,
  "author": "Hitotsubashi",
  "license": "MIT",
  "description": "A VSCode plugin based on @sagaroute/react for quickly generating  generating routes that suitable for React Router@6+",
  "version": "0.0.1-alpha.0",
  "engines": {
    "vscode": "^1.55.2",
    "node": ">= 16.10.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "routes",
    "conventional routing",
    "react router",
    "vscode plugin",
    "vscode"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Hitotsubashi/sagaroute.git",
    "directory": "packages/vscode-ext"
  },
  "homepage": "https://github.com/Hitotsubashi/sagaroute/tree/main/packages/vscode-ext",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:javascriptreact",
    "onLanguage:typescript",
    "onLanguage:typescriptreact"
  ],
  "main": "./client/out/extension",
  "files": [
    "doc/*",
    "client/out/**"
  ],
  "bugs": {
    "url": "https://github.com/Hitotsubashi/sagaroute/issues"
  },
  "contributes": {
    "configuration": {
      "title": "Sagaroute",
      "type": "object",
      "properties": {
        "sagaroute.working": {
          "type": "boolean",
          "default": false,
          "description": "Status decide Sagaroute to watching or not."
        }
      }
    },
    "commands": [
      {
        "command": "sagaroute.toggle",
        "title": "Sagaroute: toggle"
      },
      {
        "command": "sagaroute.routing",
        "title": "Sagaroute: routing"
      },
      {
        "command": "sagaroute.rebuild",
        "title": "Sagaroute: rebuild"
      },
      {
        "command": "sagaroute.show",
        "title": "Sagaroute: show"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn compile",
    "compile": "npx tsc -b",
    "build": "npx tsc -b",
    "watch": "npx tsc -b -w",
    "test": "node ./client/out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/lodash": "^4.14.194",
    "@types/node": "16.x",
    "@types/vscode": "^1.55.2",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.39.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@sagaroute/react": "^0.0.1-alpha.0",
    "chokidar": "^3.5.3",
    "glob": "^7.1.4",
    "lodash": "^4.17.21",
    "mocha": "^10.2.0",
    "vscode-languageclient": "^8.1.0",
    "vscode-languageserver": "^8.1.0",
    "vscode-languageserver-textdocument": "^1.0.8"
  }
}
