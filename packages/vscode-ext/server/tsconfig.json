{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["ESNext"],
    "outDir": "out",
    "rootDir": "src",
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true /* enable all strict type-checking options */
  },
  "include": ["src"],
  "exclude": ["node_modules", ".vscode-test"]
}
